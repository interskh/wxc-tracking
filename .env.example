# Upstash Redis (auto-set when you add Upstash integration in Vercel)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Resend API Key (get from https://resend.com/api-keys)
RESEND_API_KEY=

# Email to receive notifications
NOTIFICATION_EMAIL=your@email.com

# Cron secret for securing the endpoint (generate with: openssl rand -hex 32)
CRON_SECRET=

# Chain secret for internal job chaining (generate with: openssl rand -hex 32)
CHAIN_SECRET=
